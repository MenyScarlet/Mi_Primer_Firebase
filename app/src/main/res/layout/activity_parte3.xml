<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mi_primer_firebase.Parte3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Spinner
            android:id="@+id/Parte3_spId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_search_category_default"
            android:onClick="clickSearch"/>
    </LinearLayout>

    <EditText
        android:id="@+id/Parte3_etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/Parte3_etDorsal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dorsal"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/Parte3_etPosicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PosiciÃ³n"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/Parte3_etSueldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sueldo"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_margin="5dp"
        android:onClick="clickGuardar"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="modificar"
        android:layout_margin="5dp"
        android:onClick="clickModificar"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="eliminar"
        android:layout_margin="5dp"
        android:onClick="clickEliminar"
        android:background="@color/colorRed"/>

</LinearLayout>
